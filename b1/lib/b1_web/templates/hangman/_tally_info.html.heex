<table class="tally">
    <tr>
        <th>Turns left:</th>
        <td> <%= @tally.turns_left %> </td>
    </tr>
    <tr>
        <th>Letters used:</th>
        <td> <%= @tally.used |> Enum.join(", ") %></td>
    </tr>
    <tr>
        <th>Words so Far:</th>
        <td> <%= @tally.letters |> Enum.join(" ") %></td>
    </tr>

</table>
